version: '2'
tunnels:
  frontend:
    proto: http
    addr: http://{{ public_ip }}:{{ frontend_port }}
    domain: {{ domain }}
    oauth:
      provider: "{{ oauth_provider }}"
      allow_domains: [{% for domain in allow_domains %}"{{ domain }}"{% if not loop.last %}, {% endif %}{% endfor %}]
      {% if allow_emails %}
      allow_emails: [{% for email in allow_emails %}"{{ email }}"{% if not loop.last %}, {% endif %}{% endfor %}]
      {% endif %}
  backend:
    proto: http
    addr: http://{{ public_ip }}:{{ backend_port }}
    domain: {{ domain }}
